<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context="com.example.harshgoel.nussportsmatch.SignUp">

<Button
    android:id="@+id/confirmbut"
    android:layout_width="150dp"
    android:layout_height="43dp"
    android:layout_below="@+id/pass"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="93dp"
    android:background="@color/darkblue"
    android:drawableTint="@color/blue"
    android:onClick="addprofile"
    android:text="Sign Up"
    android:textColor="@color/white"
    android:textSize="15sp"
    android:textStyle="bold" />

<EditText
    android:id="@+id/email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:hint="Email"
    android:textColor="@color/blue"
    android:layout_below="@+id/imageView"
    android:layout_centerHorizontal="true" />

<EditText
    android:id="@+id/pass"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPassword"
    android:hint="@string/Password"
    android:textColor="@color/blue"
    android:layout_marginTop="27dp"
    android:layout_below="@+id/email"
    android:layout_alignStart="@+id/email" />

<EditText
    android:id="@+id/confirmpass"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPassword"
    android:hint="Confirm Password"
    android:textColor="@color/blue"
    android:layout_below="@+id/pass"
    android:layout_alignStart="@+id/pass"
    android:layout_marginTop="29dp" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/logo"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/email" />

<Button
    android:id="@+id/signin"
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:text="Or Sign In"
    android:onClick="signin"
    android:textColor="@color/blue"
    android:layout_below="@+id/confirmbut"
    android:layout_alignStart="@+id/confirmbut"
    android:layout_marginTop="12dp"
    android:background="?android:attr/selectableItemBackground"/>
</RelativeLayout>