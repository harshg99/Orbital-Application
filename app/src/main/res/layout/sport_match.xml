<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/blue"
    android:weightSum="4">

    <Button
        android:id="@+id/badminton"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/marT"
        android:layout_marginTop="@dimen/marM"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/sport_1" />

    <Button
        android:id="@+id/table_tennis"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/marT"
        android:layout_marginTop="@dimen/marM"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/sport_2"/>

    <Button
        android:id="@+id/tennis"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/marT"
        android:layout_marginTop="@dimen/marM"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/sport_3"/>

    <Button
        android:id="@+id/squash"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/marT"
        android:layout_marginTop="@dimen/marM"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/sport_4"/>

</LinearLayout>